<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ral.instantfun.InstantFun">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Combo Breaker"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:onClick="b1"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Darth Vader"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:onClick="b2"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doh!!!"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:onClick="b3"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fatality"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal"
            android:onClick="b4"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gaaaay"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal"
            android:onClick="b5"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hadouken"
            android:id="@+id/button6"
            android:layout_gravity="center_horizontal"
            android:onClick="b6"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Homer Bocadillo"
            android:id="@+id/button7"
            android:layout_gravity="center_horizontal"
            android:onClick="b7"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Im Batman"
            android:id="@+id/button8"
            android:layout_gravity="center_horizontal"
            android:onClick="b8"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nyancat"
            android:id="@+id/button9"
            android:layout_gravity="center_horizontal"
            android:onClick="b9"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kamehameha"
            android:id="@+id/button10"
            android:layout_gravity="center_horizontal"
            android:onClick="b10"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nooo!!!!"
            android:id="@+id/button11"
            android:layout_gravity="center_horizontal"
            android:onClick="b11"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Its a Trap"
            android:id="@+id/button12"
            android:layout_gravity="center_horizontal"
            android:onClick="b12"/>
    </LinearLayout>
</ScrollView>
</RelativeLayout>
